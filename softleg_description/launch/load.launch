<?xml version="1.0" encoding="utf-8"?>

<launch>

  <!-- Give the robot description parameter a name -->
  <arg name="description_name"           default="softleg_description"/>
  <!-- Set robot description path -->
  <arg name="description_file"           default="$(find softleg_description)/robot/softleg_cart.urdf.xacro"/>

  <!-- Run xacro script to generate ANYmal description -->
  <param name="$(arg description_name)" command="$(find xacro)/xacro $(arg description_file)" />

</launch>
